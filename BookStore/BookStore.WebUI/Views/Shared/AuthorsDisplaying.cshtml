@using BookStore.WebUI.Models
@model IEnumerable<AuthorViewModel>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surname</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var author in Model)
        {
        foreach (var property in ViewData.ModelMetadata.Properties)
        {
               <tr>
                   <td>@(property.DisplayName ?? property.PropertyName)</td>
               </tr>
        }
        }
        </tbody>
    </table>